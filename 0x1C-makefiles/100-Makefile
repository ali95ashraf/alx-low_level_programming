CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:.c=.o)
NAME = holberton
CFLAGS = -Wall -Werror -Wextra -pedantic
RM = rm -f

.PHONY: all clean oclean fclean re

all: m.h $(NAME)

$(NAME): $(OBJ)
    $(CC) $(OBJ) -o $(NAME)

%.o: %.c
    $(CC) $(CFLAGS) -c $< -o $@

clean:
    $(RM) *~ $(NAME) $(OBJ) *#
    find . -type f -name "*.swp" -delete

oclean:
    $(RM) $(OBJ)

fclean: clean oclean

re: oclean all
